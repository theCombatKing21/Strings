class Solution {
    public boolean isPalindrome(String s) {
        
        // removing the non- alphhanumeric chars from the string first and making all lowercase

        s=s.replaceAll("[^a-zA-Z0-9]","");
        s=s.toLowerCase();

        int i=0;
        int j=s.length()-1;

        while(i<=j){
            if (s.charAt(i)!=s.charAt(j)){
                return false;
            }
            i++;
            j--;
        }
        return true;
    }
}

----------------------------------------------------------------------------------------

StringBuilder rev=new StringBuilder(s);
rev.reverse();
return s.equals(rev.toString());
